%table.table.table-striped.table-hover
  %thread
    %tr
      %th #
      %th Producto
      %th Valor
      %th Estado
      %th Fecha
  %tbody
    -@orders.each do |order|
      -order.products_by_user(current_user).each do |product|
        %tr
          %td=order.id
          %td=product.name
          %td=product.pricing
          %td
            -if order.payed?
              ="Pagado"
            -else
              ="No completada"
          %td= order.created_at        
