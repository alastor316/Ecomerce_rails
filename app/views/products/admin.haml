.col-md-3.col-xs-12.col-sm-3.no-padding.inline-block.in-top.shadow-z-1
	%nav.medium.text-center
		.green.white-text.col-md-12
			Admin General
.col-md-9.col-xs-12.col-sm-9.inline-block.in-top
	.card.large-padding
		.col-md-9.inline-block.col-sm-8.col-xs-12
			%h1= @product.name
		.col-md-3.col-sm-4.col-xs-12.inline-block
			%p.big.no-margin.red-text
				=@product.sales_total / 100
				USD
		%nav.top-space
			= link_to product_path(id: @product.id, client: true), class: "other-grey text-center col-md-4 inline-block large-padding col-sm-4 col-xs-4" do
				Ver como cliente
			= link_to edit_product_path(@product), class: "other-grey text-center col-md-4 inline-block large-padding col-sm-4 col-xs-4" do
				Editar Producto
			= link_to @product, method: :delete, data: { confirm: "¿Estas seguro de eliminar este producto?" },class: "other-grey text-center col-md-4 inline-block large-padding col-sm-4 col-xs-4" do
				Eliminar Producto
		%div
			%h3.grey-text Archivos
			%ol
				- @product.attachments.each do |attachment|
					%li.large-padding.medium.grey-text.other-grey
						.col-xs-11.inline-block= link_to attachment.archivo_file_name, attachment
						.col-xs-1.inline-block
							= link_to attachment, method: :delete, data: { confirm: "¿Estas seguro de eliminar	este archivo?" }, class: "red-text" do
								%i.mdi-action-dashboard
			= render "attachments/form", product_id: @product.id
